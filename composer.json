{
  "name": "industrialdev/wicket-wp-base-plugin",
  "description": "Wicket Core Plugin",
  "version": "2.1.60",
  "keywords": ["wordpress", "plugin"],
  "homepage": "https://github.com/industrialdev/wicket-wp-base-plugin",
  "authors": [
    {
      "name": "Wicket",
      "homepage": "https://wicket.io"
    }
  ],
  "type": "wordpress-plugin",
  "require": {
    "industrialdev/wicket-sdk-php": "dev-master",
    "php": ">=8.2",
    "jeffreyvanrossum/wp-settings": "^1"
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "WicketWP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WicketWP\\Tests\\": "tests/unit/"
    }
  },
  "scripts": {
    "version-bump": [
      "@php ./.ci/version-bump.php"
    ],
    "dump-autoload-prod": "@php composer dump-autoload --optimize --no-dev",
    "test": "phpunit",
    "test:unit": "phpunit --testsuite unit",
    "test:coverage": "phpunit --coverage-html coverage",
    "lint": "php-cs-fixer fix --dry-run --diff",
    "format": "php-cs-fixer fix"
  },
  "repositories": [
  {
    "type": "git",
    "url": "https://github.com/industrialdev/wicket-sdk-php.git"
  }
 ]
}
