{
  "name": "industrialdev/wicket-wp-base-plugin",
  "description": "Wicket Core Plugin",
  "version": "2.1.66",
  "keywords": ["wordpress", "plugin"],
  "homepage": "https://github.com/industrialdev/wicket-wp-base-plugin",
  "authors": [
    {
      "name": "Wicket",
      "homepage": "https://wicket.io"
    }
  ],
  "type": "wordpress-plugin",
  "require": {
    "industrialdev/wicket-sdk-php": "dev-master",
    "php": ">=8.2",
    "jeffreyvanrossum/wp-settings": "^1"
  },
  "require-dev": {
    "brain/monkey": "^2",
    "friendsofphp/php-cs-fixer": "^3",
    "pestphp/pest": "^4",
    "pestphp/pest-plugin-browser": "^4",
    "phpunit/phpunit": "^12"
  },
  "autoload": {
    "psr-4": {
      "WicketWP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WicketWP\\Tests\\": "tests/unit/"
    }
  },
  "scripts": {
    "production": "composer dump-autoload --optimize --no-dev",
    "dump-autoload-prod": "@production",
    "version-bump": [
      "@php ./.ci/version-bump.php"
    ],
    "test": "pest",
    "test:unit": "pest --testsuite unit",
    "test:coverage": "pest --coverage-html coverage",
    "test:browser": "WICKET_BROWSER_BASE_URL=https://localhost ./vendor/bin/pest --testsuite browser",
    "lint": "php-cs-fixer fix --dry-run --diff",
    "format": "php-cs-fixer fix",
    "check": [
        "@lint",
        "@test"
    ],
    "cs:fix": "php-cs-fixer fix"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "repositories": [
  {
    "type": "git",
    "url": "https://github.com/industrialdev/wicket-sdk-php.git"
  }
 ]
}
